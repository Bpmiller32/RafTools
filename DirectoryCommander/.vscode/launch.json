{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Crawler",
            "type": "coreclr",
            "request": "launch",

            "logging": {"moduleLoad": false},
            "preLaunchTask": "build Crawler",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Crawler.App/bin/Debug/net6.0/Crawler.App.dll",
            "args": [],
        },
        {
            "name": "Builder",
            "type": "coreclr",
            "request": "launch",

            "logging": {"moduleLoad": false},
            "preLaunchTask": "build Builder",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Builder.App/bin/Debug/net6.0-windows/Builder.App.dll",
            "args": [],
        },
        {
            "name": "Tester",
            "type": "coreclr",
            "request": "launch",

            "logging": {"moduleLoad": false},
            "preLaunchTask": "build Tester",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Tester.App/bin/Debug/net6.0-windows/Tester.App.dll",
            "args": [],
        },
        {
            "name": "Publisher",
            "type": "coreclr",
            "request": "launch",

            "logging": {"moduleLoad": false},
            "preLaunchTask": "build Publisher",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Publisher.App/bin/Debug/net6.0-windows/Publisher.App.dll",
            "args": [],
        },
        {
            "name": "UI",
            "type": "node-terminal",
            "request": "launch",

            "preLaunchTask": "build UI",
            "cwd": "${workspaceFolder}/Ui",
            "command": "npm run dev -- --host",
        },
    ],
    "compounds": [
      {
        "name": "Launch all services",
        "configurations": ["Crawler", "Builder", "Tester", "Publisher"],
        "stopAll": true
      },
      {
        "name": "Launch all services + UI",
        "configurations": ["Crawler", "Builder", "Tester", "Publisher", "UI"],
        "stopAll": true
      },
    ]
}